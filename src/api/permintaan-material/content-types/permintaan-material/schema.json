{
  "kind": "collectionType",
  "collectionName": "permintaan_materials",
  "info": {
    "singularName": "permintaan-material",
    "pluralName": "permintaan-materials",
    "displayName": " Permintaan Material",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nomor_permintaan": {
      "type": "string",
      "required": true
    },
    "tanggal_permintaan": {
      "type": "date"
    },
    "status_permintaan": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "ordered",
        "delivered"
      ]
    },
    "tanggal_kebutuhan": {
      "type": "date"
    },
    "keterangan": {
      "type": "string"
    },
    "material_type": {
      "type": "enumeration",
      "enum": [
        "semen",
        "batubata",
        "besi",
        "keramik",
        "lainnya"
      ],
      "required": true
    },
    "quantity": {
      "type": "decimal",
      "required": true,
      "min": 0.01
    },
    "unit_measurement": {
      "type": "string",
      "required": true,
      "maxLength": 20
    },
    "specification": {
      "type": "text",
      "maxLength": 300
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "required": true
    },
    "status_price": {
      "type": "enumeration",
      "enum": [
        "quoted",
        "confirmed",
        "paid"
      ],
      "required": true
    },
    "estimated_cost": {
      "type": "decimal",
      "min": 0
    },
    "estimated_cost_total": {
      "type": "decimal",
      "min": 0
    },
    "actual_cost": {
      "type": "decimal",
      "min": 0
    },
    "delivery_date": {
      "type": "date"
    },
    "received_by": {
      "type": "string",
      "maxLength": 100
    },
    "item_material": {
      "type": "json"
    },
    "proyek": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "permintaan_materials"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "permintaan_materials"
    },
    "pemohon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "permintaan_materials"
    },
    "penyetuju": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "permintaan_materials"
    },
    "purchasings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchasing.purchasing",
      "mappedBy": "permintaan_material"
    }
  }
}
