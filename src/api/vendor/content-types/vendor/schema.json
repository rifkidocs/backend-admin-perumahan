{
  "kind": "collectionType",
  "collectionName": "vendors",
  "info": {
    "singularName": "vendor",
    "pluralName": "vendors",
    "displayName": "Vendor",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "nama_perusahaan": {
      "type": "string",
      "required": true
    },
    "jenis_layanan": {
      "type": "enumeration",
      "enum": [
        "Sipil",
        "Arsitektur",
        "Instalasi Listrik",
        "Instalasi Air",
        "Material",
        "Lainnya"
      ]
    },
    "kontak": {
      "type": "component",
      "repeatable": false,
      "component": "komponen.kontak"
    },
    "npwp": {
      "type": "string"
    },
    "nomor_rekening": {
      "type": "string"
    },
    "bank": {
      "type": "string"
    },
    "portofolio": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "status_kontrak": {
      "type": "enumeration",
      "enum": ["Aktif", "Tidak Aktif", "Blacklist"]
    },
    "dokumen_vendor": {
      "type": "component",
      "repeatable": true,
      "component": "komponen.dokumen"
    },
    "material": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::material.material",
      "mappedBy": "supplier"
    },
    "purchasings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchasing.purchasing",
      "mappedBy": "supplier"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "vendor"
    },
    "supplied_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project-material.project-material",
      "mappedBy": "vendor"
    },
    "contractor_projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "mappedBy": "contractors"
    }
  }
}
