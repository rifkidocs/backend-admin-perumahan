{
  "kind": "collectionType",
  "collectionName": "progres_harians",
  "info": {
    "singularName": "progres-harian",
    "pluralName": "progres-harians",
    "displayName": "Progress Harian",
    "description": "Progress tracking for construction units"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "update_date": {
      "type": "date",
      "required": true
    },
    "progress_before": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "progress_after": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "completed_work": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500
    },
    "list_materials": {
      "type": "component",
      "repeatable": true,
      "component": "pengeluaran.item-pengeluaran"
    },
    "pengeluaran_material": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::pengeluaran-material.pengeluaran-material",
      "inversedBy": "progres_harian"
    },
    "gudang": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::gudang.gudang",
      "inversedBy": "progres_harians"
    },
    "labor_hours": {
      "type": "decimal",
      "min": 0
    },
    "notes": {
      "type": "text",
      "maxLength": 200
    },
    "verified_by": {
      "type": "string",
      "maxLength": 100
    },
    "verified_date": {
      "type": "date"
    },
    "photos_before": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "photos_after": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "persentase_progres": {
      "type": "decimal"
    },
    "aktivitas": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "status_harian": {
      "type": "enumeration",
      "enum": ["sesuai_jadwal", "terlambat", "maju_jadwal"],
      "default": "sesuai_jadwal"
    },
    "deskripsi": {
      "type": "text"
    },
    "catatan": {
      "type": "text"
    },
    "mandor": {
      "type": "string",
      "maxLength": 100
    },
    "tukang": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "kernet": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "total_pekerja": {
      "type": "integer",
      "min": 0
    },
    "persentase_kehadiran": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "catatan_kehadiran": {
      "type": "text"
    },
    "kondisi_cuaca": {
      "type": "enumeration",
      "enum": [
        "cerah",
        "cerah_berawan",
        "berawan",
        "hujan_ringan",
        "hujan_sedang",
        "hujan_lebat",
        "angin_kencang"
      ]
    },
    "dampak_konstruksi": {
      "type": "enumeration",
      "enum": ["tidak_ada", "minor", "sedang", "signifikan"],
      "default": "tidak_ada"
    },
    "durasi_tunda": {
      "type": "integer",
      "min": 0,
      "description": "Durasi penundaan dalam menit"
    },
    "keterangan_cuaca": {
      "type": "text"
    },
    "foto_dokumentasi": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"],
      "description": "Combined progress photos"
    },
    "detail_foto": {
      "type": "json",
      "description": "Photo metadata: lokasi, judul, deskripsi, kategori (pondasi/struktur/atap/finishing/instalasi/lainnya)"
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "progres_harians"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "progres_harians"
    },
    "pelapor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "progres_harians"
    }
  }
}
