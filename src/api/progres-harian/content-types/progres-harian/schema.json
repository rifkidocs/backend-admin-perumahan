{
  "kind": "collectionType",
  "collectionName": "progres_harians",
  "info": {
    "singularName": "progres-harian",
    "pluralName": "progres-harians",
    "displayName": "Progress Update",
    "description": "Progress tracking for construction units"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "update_date": {
      "type": "date",
      "required": true
    },
    "progress_before": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "progress_after": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "completed_work": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500
    },
    "materials_used": {
      "type": "text",
      "maxLength": 300
    },
    "labor_hours": {
      "type": "decimal",
      "min": 0
    },
    "weather_condition": {
      "type": "enumeration",
      "enum": [
        "cerah",
        "cerah_berawan",
        "berawan",
        "hujan_ringan",
        "hujan_sedang",
        "hujan_lebat",
        "angin_kencang"
      ]
    },
    "notes": {
      "type": "text",
      "maxLength": 200
    },
    "created_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "verified_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "verified_date": {
      "type": "date"
    },
    "photos_before": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "photos_after": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "material_masuk": {
      "type": "json"
    },
    "material_terpakai": {
      "type": "json"
    },
    "persentase_progres": {
      "type": "decimal"
    },
    "blok_unit": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "aktivitas": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "status_harian": {
      "type": "enumeration",
      "enum": ["sesuai_jadwal", "terlambat", "maju_jadwal"],
      "default": "sesuai_jadwal"
    },
    "deskripsi": {
      "type": "text"
    },
    "catatan": {
      "type": "text"
    },
    "data_pekerja": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::worker-attendance.worker-attendance",
      "mappedBy": "laporan_progress"
    },
    "data_cuaca": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::weather-condition.weather-condition",
      "mappedBy": "laporan_progress"
    },
    "penggunaan_material": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::material-usage.material-usage",
      "mappedBy": "laporan_progress"
    },
    "dokumentasi_foto": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::progress-photo.progress-photo",
      "mappedBy": "laporan_progress"
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "progres_harians"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "progres_harians"
    },
    "pelapor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "progres_harians"
    }
  }
}
