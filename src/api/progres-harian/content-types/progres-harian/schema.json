{
  "kind": "collectionType",
  "collectionName": "progres_harians",
  "info": {
    "singularName": "progres-harian",
    "pluralName": "progres-harians",
    "displayName": "Progress Update",
    "description": "Progress tracking for construction units"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "update_date": {
      "type": "date",
      "required": true
    },
    "progress_before": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "progress_after": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "completed_work": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500
    },
    "materials_used": {
      "type": "text",
      "maxLength": 300
    },
    "labor_hours": {
      "type": "decimal",
      "min": 0
    },
    "weather_condition": {
      "type": "enumeration",
      "enum": [
        "Cerah",
        "Hujan Ringan",
        "Hujan Deras",
        "Berawan"
      ]
    },
    "notes": {
      "type": "text",
      "maxLength": 200
    },
    "created_by": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "verified_by": {
      "type": "string",
      "maxLength": 100
    },
    "verified_date": {
      "type": "date"
    },
    "photos_before": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "photos_after": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "material_masuk": {
      "type": "json"
    },
    "material_terpakai": {
      "type": "json"
    },
    "persentase_progres": {
      "type": "decimal"
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "progres_harians"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "progres_harians"
    },
    "pelapor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "progres_harians"
    }
  }
}
