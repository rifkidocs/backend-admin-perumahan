{
  "kind": "collectionType",
  "collectionName": "penyesuaian_piutangs",
  "info": {
    "singularName": "penyesuaian-piutang",
    "pluralName": "penyesuaian-piutangs",
    "displayName": "Penyesuaian Piutang",
    "description": "Pencatatan penyesuaian (penambahan) nilai piutang konsumen"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "tipe_penyesuaian": {
      "type": "enumeration",
      "enum": ["penambahan", "pengurangan"],
      "required": true,
      "default": "penambahan"
    },
    "keterangan": {
      "type": "string",
      "required": true
    },
    "tanggal": {
      "type": "date",
      "required": true
    },
    "piutang_konsumen": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::piutang-konsumen.piutang-konsumen",
      "inversedBy": "penyesuaian_piutangs"
    },
    "dibuat_oleh": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    }
  }
}
