{
  "kind": "collectionType",
  "collectionName": "work_items",
  "info": {
    "singularName": "work-item",
    "pluralName": "work-items",
    "displayName": "Work Item",
    "description": "Manajemen item pekerjaan dalam proyek"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "nama_pekerjaan": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "proyek": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "required": true,
      "inversedBy": "work_items"
    },
    "bobot": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 100
    },
    "deadline": {
      "type": "date",
      "required": true
    },
    "progress": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100,
      "default": 0
    },
    "status_pekerjaan": {
      "type": "enumeration",
      "enum": [
        "On Track",
        "Delayed",
        "Selesai"
      ],
      "required": true,
      "default": "On Track"
    },
    "deskripsi": {
      "type": "text"
    },
    "material_required": {
      "type": "component",
      "repeatable": true,
      "component": "shared.material-item"
    },
    "tenaga_kerja": {
      "type": "component",
      "repeatable": true,
      "component": "shared.labor-requirement"
    },
    "labor_estimations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::labor-estimation.labor-estimation",
      "mappedBy": "item_pekerjaan"
    }
  }
}
