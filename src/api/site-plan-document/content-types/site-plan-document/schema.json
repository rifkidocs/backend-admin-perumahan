{
  "kind": "collectionType",
  "collectionName": "site_plan_documents",
  "info": {
    "singularName": "site-plan-document",
    "pluralName": "site-plan-documents",
    "displayName": "Site Plan Document",
    "description": "Manage site plan documents and layouts"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "document_name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files"]
    },
    "file_format": {
      "type": "enumeration",
      "enum": ["PDF", "DWG", "JPG", "PNG"],
      "required": true
    },
    "file_size": {
      "type": "decimal"
    },
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "upload_date": {
      "type": "datetime"
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "status_site_plan": {
      "type": "enumeration",
      "enum": ["draft", "active", "archived"],
      "default": "draft"
    },
    "scale": {
      "type": "string",
      "maxLength": 20
    },
    "drawing_number": {
      "type": "string",
      "maxLength": 50
    },
    "revision": {
      "type": "string"
    },
    "approved_by": {
      "type": "string",
      "maxLength": 100
    },
    "approval_date": {
      "type": "date"
    },
    "archived_at": {
      "type": "datetime"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "site_plan_documents",
      "required": false
    }
  }
}
