{
  "kind": "collectionType",
  "collectionName": "purchasings",
  "info": {
    "singularName": "purchasing",
    "pluralName": "purchasings",
    "displayName": "Purchase Order",
    "description": "Manajemen Purchase Order dan delivery material"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "nomor_po": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "supplier": {
      "type": "string",
      "required": true
    },
    "materials": {
      "type": "component",
      "repeatable": true,
      "component": "shared.material-item",
      "required": true
    },
    "tanggal_order": {
      "type": "date",
      "required": true
    },
    "tanggal_estimasi_delivery": {
      "type": "date",
      "required": true
    },
    "tanggal_actual_delivery": {
      "type": "date"
    },
    "status_po": {
      "type": "enumeration",
      "enum": ["Diproses", "Dikirim", "Diterima", "Terlambat", "Dibatalkan"],
      "required": true,
      "default": "Diproses"
    },
    "total_harga": {
      "type": "decimal",
      "min": 0
    },
    "catatan": {
      "type": "text"
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "purchasing"
    },
    "penerimaan_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::penerimaan-material.penerimaan-material",
      "mappedBy": "purchasing"
    }
  }
}
