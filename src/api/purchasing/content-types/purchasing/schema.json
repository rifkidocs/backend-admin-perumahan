        "Draft",
        "Terkirim",
        "Diterima Sebagian",
        "Selesai",
        "Dibatalkan"
      ]
    },
    "total_harga": {
      "type": "decimal"
    },
    "cara_pembayaran": {
      "type": "enumeration",
      "enum": [
        "Cash",
        "Transfer",
        "Tempo"
      ]
    },
    "tanggal_pembayaran": {
      "type": "date"
    },
    "tanggal_pengiriman": {
      "type": "date"
    },
    "keterangan": {
      "type": "string"
    },
    "dokumen_po": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
