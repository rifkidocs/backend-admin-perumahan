{
  "kind": "collectionType",
  "collectionName": "purchasings",
  "info": {
    "singularName": "purchasing",
    "pluralName": "purchasings",
    "displayName": "Purchasing",
    "description": "Manajemen Purchase Order dan delivery material"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nomor_po": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "supplier": {
      "type": "string",
      "required": true
    },
    "materials": {
      "type": "component",
      "component": "shared.material-item",
      "repeatable": true,
      "required": true
    },
    "tanggal_order": {
      "type": "date",
      "required": true
    },
    "tanggal_estimasi_delivery": {
      "type": "date",
      "required": true
    },
    "tanggal_actual_delivery": {
      "type": "date"
    },
    "status_po": {
      "type": "enumeration",
      "required": true,
      "default": "Diproses",
      "enum": [
        "Diproses",
        "Dikirim",
        "Diterima",
        "Terlambat",
        "Dibatalkan"
      ]
    },
    "total_harga": {
      "type": "biginteger",
      "min": "0"
    },
    "catatan": {
      "type": "text"
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "purchasing"
    },
    "penerimaan_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::penerimaan-material.penerimaan-material",
      "mappedBy": "purchasing"
    },
    "payment_invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment-invoice.payment-invoice",
      "mappedBy": "purchaseOrder"
    }
  }
}
