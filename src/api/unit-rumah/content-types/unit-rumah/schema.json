{
  "kind": "collectionType",
  "collectionName": "unit_rumahs",
  "info": {
    "singularName": "unit-rumah",
    "pluralName": "unit-rumahs",
    "displayName": "Unit Rumah",
    "description": "Management system for housing units with construction progress tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "unit_id": {
      "type": "string",
      "unique": true
    },
    "project_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "required": true
    },
    "block": {
      "type": "string",
      "maxLength": 10,
      "required": true
    },
    "kavling_number": {
      "type": "string",
      "maxLength": 10,
      "required": true
    },
    "price": {
      "type": "text",
      "required": true
    },
    "land_area": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "building_area": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "bedrooms": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "bathrooms": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "garage": {
      "type": "integer",
      "min": 0
    },
    "location": {
      "type": "string",
      "maxLength": 100
    },
    "status_unit": {
      "type": "enumeration",
      "required": true,
      "default": "belum-dibangun",
      "enum": [
        "belum-dibangun",
        "progres",
        "selesai",
        "serah-terima",
        "handed_over"
      ]
    },
    "progress": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0,
      "max": 100
    },
    "estimated_completion": {
      "type": "date",
      "required": true
    },
    "construction_start": {
      "type": "date",
      "required": false
    },
    "construction_end": {
      "type": "date",
      "required": false
    },
    "handover_date": {
      "type": "date",
      "required": false
    },
    "handover_status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "rejected"]
    },
    "construction_cost": {
      "type": "text"
    },
    "material_cost": {
      "type": "text"
    },
    "labor_cost": {
      "type": "text"
    },
    "specifications": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "floor_plans": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files"]
    },
    "location_map": {
      "type": "string",
      "regex": "^-?[0-9]{1,3}\\.[0-9]+,-?[0-9]{1,3}\\.[0-9]+$"
    },
    "notes": {
      "type": "text",
      "maxLength": 1000
    },
    "status_pembangunan": {
      "type": "component",
      "component": "komponen.progres-proyek",
      "repeatable": true
    },
    "dokumen_unit": {
      "type": "component",
      "component": "komponen.dokumen",
      "repeatable": true
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "units"
    },
    "marketing_staff": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "unit_sales"
    },
    "permintaan_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::permintaan-material.permintaan-material",
      "mappedBy": "unit_rumah"
    },
    "pengeluaran_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pengeluaran-material.pengeluaran-material",
      "mappedBy": "unit_rumah"
    },
    "kas_masuks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-masuk.kas-masuk",
      "mappedBy": "unit_rumah"
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "unit"
    },
    "rabs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rab.rab",
      "mappedBy": "unit_rumah"
    },
    "progres_harians": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::progres-harian.progres-harian",
      "mappedBy": "unit_rumah"
    },
    "serah_terima_units": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::serah-terima-unit.serah-terima-unit",
      "mappedBy": "unit_rumah"
    },
    "unit_type": {
      "type": "string"
    },
    "boq_documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::boq-document.boq-document",
      "mappedBy": "unit_rumah"
    },
    "handover_documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::handover-document.handover-document",
      "mappedBy": "unit_rumah"
    }
  }
}
