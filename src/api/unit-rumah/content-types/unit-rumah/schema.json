{
  "kind": "collectionType",
  "collectionName": "unit_rumahs",
  "info": {
    "singularName": "unit-rumah",
    "pluralName": "unit-rumahs",
    "displayName": "Unit Rumah",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "unit_id": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^UNIT-[0-9]{3}$"
    },
    "unit_type": {
      "type": "string",
      "maxLength": 50,
      "required": true
    },
    "block": {
      "type": "string",
      "maxLength": 10,
      "required": true
    },
    "number": {
      "type": "string",
      "maxLength": 10,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "land_area": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "building_area": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "bedrooms": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "bathrooms": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "garage": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "location": {
      "type": "string",
      "maxLength": 100
    },
    "status": {
      "type": "enumeration",
      "required": true,
      "default": "tersedia",
      "enum": [
        "tersedia",
        "dipesan",
        "terjual",
        "maintenance"
      ]
    },
    "specifications": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "harga": {
      "type": "component",
      "component": "komponen.harga",
      "repeatable": false
    },
    "estimasi_biaya_pembangunan": {
      "type": "decimal"
    },
    "gambar_3d": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gambar_denah": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "foto_progress": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "status_pembangunan": {
      "type": "component",
      "component": "komponen.progres-proyek",
      "repeatable": true
    },
    "dokumen_unit": {
      "type": "component",
      "component": "komponen.dokumen",
      "repeatable": true
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "unit_rumahs"
    },
    "marketing_staff": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "unit_sales"
    },
    "permintaan_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::permintaan-material.permintaan-material",
      "mappedBy": "unit_rumah"
    },
    "pengeluaran_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::pengeluaran-material.pengeluaran-material",
      "mappedBy": "unit_rumah"
    },
    "kas_masuks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-masuk.kas-masuk",
      "mappedBy": "unit_rumah"
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "unit_rumah"
    },
    "rabs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rab.rab",
      "mappedBy": "unit_rumah"
    },
    "progres_harians": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::progres-harian.progres-harian",
      "mappedBy": "unit_rumah"
    },
    "serah_terima_units": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::serah-terima-unit.serah-terima-unit",
      "mappedBy": "unit_rumah"
    }
  }
}
