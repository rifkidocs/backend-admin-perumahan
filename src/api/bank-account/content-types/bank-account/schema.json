{
  "kind": "collectionType",
  "collectionName": "bank_accounts",
  "info": {
    "singularName": "bank-account",
    "pluralName": "bank-accounts",
    "displayName": "Bank Account",
    "description": "Bank account management for payment processing"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nama_bank": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Nama bank"
    },
    "nomor_rekening": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50,
      "description": "Nomor rekening bank"
    },
    "nama_pemilik": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "description": "Nama pemilik rekening"
    },
    "cabang": {
      "type": "string",
      "maxLength": 100,
      "description": "Nama cabang bank"
    },
    "jenis_rekening": {
      "type": "enumeration",
      "enum": ["giro", "tabungan", "deposito", "elektronik"],
      "default": "tabungan",
      "description": "Jenis rekening"
    },
    "mata_uang": {
      "type": "enumeration",
      "enum": ["IDR", "USD", "EUR"],
      "default": "IDR",
      "description": "Mata uang rekening"
    },
    "saldo_minimum": {
      "type": "decimal",
      "description": "Saldo minimum yang harus dipertahankan"
    },
    "status_aktif": {
      "type": "boolean",
      "default": true,
      "description": "Status aktif rekening"
    },
    "deskripsi": {
      "type": "text",
      "maxLength": 500,
      "description": "Deskripsi atau catatan tambahan"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "bankAccount"
    }
  }
}