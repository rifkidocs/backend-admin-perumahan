      "default": 0
    },
    "tukang_cat": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "kernet": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "total_pekerja": {
      "type": "integer",
      "min": 0,
      "required": true
    },
    "persentase_kehadiran": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "required": true
