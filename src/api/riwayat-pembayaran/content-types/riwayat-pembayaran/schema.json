{
  "kind": "collectionType",
  "collectionName": "riwayat_pembayarans",
  "info": {
    "singularName": "riwayat-pembayaran",
    "pluralName": "riwayat-pembayarans",
    "displayName": "Riwayat Pembayaran",
    "description": "Sistem pencatatan riwayat pembayaran terpadu (Hutang, Piutang, Subkon)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tipe_transaksi": {
      "type": "enumeration",
      "enum": ["masuk", "keluar"],
      "required": true,
      "description": "Menentukan apakah ini dana masuk atau keluar"
    },
    "kategori_pembayaran": {
      "type": "enumeration",
      "enum": [
        "piutang_konsumen",
        "tagihan_supplier",
        "subkontraktor",
        "lainnya"
      ],
      "required": true
    },
    "jumlah_pembayaran": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "tanggal_pembayaran": {
      "type": "date",
      "required": true
    },
    "metode_pembayaran": {
      "type": "enumeration",
      "required": true,
      "enum": ["Transfer Bank", "Tunai", "Cek", "Giro", "Escrow", "Lainnya"],
      "default": "Transfer Bank"
    },
    "pos_keuangan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::pos-keuangan.pos-keuangan"
    },
    "piutang_konsumen": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::piutang-konsumen.piutang-konsumen",
      "inversedBy": "riwayat_pembayarans"
    },
    "payment_invoice": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment-invoice.payment-invoice",
      "inversedBy": "riwayat_pembayarans"
    },
    "subkontraktor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subkontraktor.subkontraktor",
      "inversedBy": "riwayat_pembayarans"
    },
    "nomor_referensi": {
      "type": "string",
      "maxLength": 100,
      "description": "Nomor bukti transfer, cek, atau referensi lainnya"
    },
    "status_pembayaran": {
      "type": "enumeration",
      "required": true,
      "enum": ["Pending", "Berhasil", "Gagal"],
      "default": "Berhasil"
    },
    "deskripsi": {
      "type": "text",
      "maxLength": 1000
    },
    "bukti_pembayaran": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files"]
    },
    "catatan_internal": {
      "type": "text",
      "maxLength": 500
    },
    "dibuat_oleh": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "alokasi_pembayaran": {
      "type": "json"
    }
  }
}
