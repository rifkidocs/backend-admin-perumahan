{
  "kind": "collectionType",
  "collectionName": "boq_documents",
  "info": {
    "singularName": "boq-document",
    "pluralName": "boq-documents",
    "displayName": "BOQ Document",
    "description": "Manage BOQ and budget documents"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "document_name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "document_type": {
      "type": "enumeration",
      "enum": [
        "RAB",
        "BOQ Material",
        "BOQ Infrastruktur"
      ],
      "required": true
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "unit_type": {
      "type": "string",
      "maxLength": 50
    },
    "total_amount": {
      "type": "decimal"
    },
    "revision": {
      "type": "string",
      "default": "01"
    },
    "creation_date": {
      "type": "date"
    },
    "status_boq": {
      "type": "enumeration",
      "enum": [
        "draft",
        "approved",
        "active",
        "archived"
      ],
      "default": "draft"
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "IDR",
        "USD"
      ],
      "default": "IDR"
    },
    "approved_by": {
      "type": "string",
      "maxLength": 100
    },
    "approval_date": {
      "type": "date"
    },
    "archived_at": {
      "type": "datetime"
    },
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "boq_documents"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "boq_documents"
    }
  }
}
