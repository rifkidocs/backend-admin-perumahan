{
  "kind": "collectionType",
  "collectionName": "konsumens",
  "info": {
    "singularName": "konsumen",
    "pluralName": "konsumens",
    "displayName": "Konsumen",
    "description": "Customer management for housing booking system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "phone": {
      "type": "string",
      "required": true,
      "regex": "^08[0-9]{8,11}$"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "address": {
      "type": "text",
      "maxLength": 500
    },
    "ktp_number": {
      "type": "string",
      "required": true,
      "regex": "^[0-9]{16}$"
    },
    "npwp_number": {
      "type": "string",
      "regex": "^[0-9]{15}$"
    },
    "birth_date": {
      "type": "date"
    },
    "birth_place": {
      "type": "string",
      "maxLength": 50
    },
    "occupation": {
      "type": "string",
      "maxLength": 50
    },
    "monthly_income": {
      "type": "decimal",
      "min": 0
    },
    "emergency_contact": {
      "type": "text",
      "maxLength": 200
    },
    "nama_lengkap": {
      "type": "string",
      "required": true
    },
    "nomor_ktp": {
      "type": "string",
      "required": true
    },
    "kontak": {
      "type": "component",
      "repeatable": false,
      "component": "komponen.kontak"
    },
    "pekerjaan": {
      "type": "string"
    },
    "penghasilan_per_bulan": {
      "type": "decimal"
    },
    "status_kpr": {
      "type": "enumeration",
      "enum": ["Belum Mengajukan", "Dalam Proses", "Disetujui", "Ditolak"]
    },
    "metode_pembayaran": {
      "type": "enumeration",
      "enum": ["KPR", "Tunai Keras", "Tunai Bertahap"]
    },
    "dokumen_konsumen": {
      "type": "component",
      "repeatable": true,
      "component": "komponen.dokumen"
    },
    "riwayat_pembayaran": {
      "type": "component",
      "repeatable": true,
      "component": "komponen.transaksi"
    },
    "bank_kpr": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::bank.bank"
    },
    "marketing": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "customer"
    }
  }
}
