{
  "kind": "collectionType",
  "collectionName": "payment_invoices",
  "info": {
    "singularName": "payment-invoice",
    "pluralName": "payment-invoices",
    "displayName": "Tagihan & Hutang",
    "description": "Accounts payable management system for supplier invoices and payment tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "invoiceNumber": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "payment_invoices"
    },
    "amount": {
      "type": "biginteger",
      "required": true,
      "min": "1"
    },
    "dueDate": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 1000
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": ["opname tukang", "hutang tanah", "hutang supplier", "lainnya"]
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "payment_invoices"
    },
    "pekerja": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::pekerja.pekerja",
      "inversedBy": "payment_invoices"
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "payment_invoices"
    },
    "luas_tanah": {
      "type": "decimal",
      "min": 0
    },
    "atas_nama": {
      "type": "string",
      "maxLength": 100
    },
    "paymentTerms": {
      "type": "enumeration",
      "required": true,
      "enum": ["cash", "dp", "termin", "net30", "net60"]
    },
    "notes": {
      "type": "text",
      "maxLength": 2000
    },
    "status_pembayaran": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": ["pending", "partial", "paid", "overdue", "cancelled"]
    },
    "paid_amount": {
      "type": "biginteger",
      "required": true,
      "default": "0",
      "min": "0"
    },
    "remaining_amount": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "riwayat_pembayarans": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::riwayat-pembayaran.riwayat-pembayaran",
      "mappedBy": "payment_invoice"
    },
    "penyesuaian_hutangs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::penyesuaian-hutang.penyesuaian-hutang",
      "mappedBy": "payment_invoice"
    },
    "invoiceDocument": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files"]
    },
    "approvedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "approved_payables"
    },
    "approvedDate": {
      "type": "datetime"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["transfer", "cash", "check", "giro", "others"]
    },
    "lastPaymentDate": {
      "type": "datetime"
    },
    "fullyPaidDate": {
      "type": "datetime"
    },
    "overdueNotified": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "enumeration",
      "default": "normal",
      "enum": ["low", "normal", "high", "urgent"]
    },
    "taxIncluded": {
      "type": "boolean",
      "default": false
    },
    "taxAmount": {
      "type": "biginteger",
      "min": "0"
    },
    "discountAmount": {
      "type": "biginteger",
      "min": "0"
    },
    "penaltyAmount": {
      "type": "biginteger",
      "default": "0",
      "min": "0"
    },
    "referenceNumber": {
      "type": "string",
      "maxLength": 50
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "created_payables"
    },
    "invoiceDate": {
      "type": "date",
      "required": true
    },
    "statusInvoice": {
      "type": "enumeration",
      "required": true,
      "default": "received",
      "enum": ["received", "verified", "rejected", "cancelled"]
    },
    "paymentReference": {
      "type": "string",
      "maxLength": 100
    },
    "verifiedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "payment_invoices_verified"
    },
    "verifiedDate": {
      "type": "datetime"
    },
    "goodsReceipt": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::penerimaan-material.penerimaan-material",
      "inversedBy": "payment_invoices"
    },
    "purchaseOrder": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::purchasing.purchasing",
      "inversedBy": "payment_invoices"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files"]
    },
    "paidBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "payment_invoices_paid"
    }
  }
}
