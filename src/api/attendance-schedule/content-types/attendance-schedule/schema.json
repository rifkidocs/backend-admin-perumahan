{
  "kind": "collectionType",
  "collectionName": "attendance_schedules",
  "info": {
    "singularName": "attendance-schedule",
    "pluralName": "attendance-schedules",
    "displayName": "Jadwal Absensi",
    "description": "Jadwal absensi untuk karyawan dengan pengaturan lokasi dan waktu"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "schedule_name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "employee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "attendance_schedules"
    },
    "locations": {
      "type": "component",
      "repeatable": true,
      "component": "komponen.lokasi-absensi",
      "required": true
    },
    "jam_masuk": {
      "type": "time",
      "required": true
    },
    "jam_pulang": {
      "type": "time",
      "required": true
    },
    "radius_meters": {
      "type": "integer",
      "required": true,
      "min": 10,
      "max": 5000
    },
    "effective_date": {
      "type": "date",
      "required": true
    },
    "expiry_date": {
      "type": "date"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "notes": {
      "type": "text",
      "maxLength": 500
    },
    "attendance_records": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::absensi.absensi",
      "mappedBy": "attendance_schedule"
    },
    "created_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "updated_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
