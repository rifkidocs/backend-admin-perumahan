{
  "kind": "collectionType",
  "collectionName": "penyesuaian_hutangs",
  "info": {
    "singularName": "penyesuaian-hutang",
    "pluralName": "penyesuaian-hutangs",
    "displayName": "Penyesuaian Hutang",
    "description": "Pencatatan penyesuaian (penambahan) nilai hutang"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "tipe_penyesuaian": {
      "type": "enumeration",
      "enum": ["penambahan", "pengurangan"],
      "required": true,
      "default": "penambahan"
    },
    "keterangan": {
      "type": "string",
      "required": true
    },
    "tanggal": {
      "type": "date",
      "required": true
    },
    "payment_invoice": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment-invoice.payment-invoice",
      "inversedBy": "penyesuaian_hutangs"
    },
    "dibuat_oleh": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "item_id": {
      "type": "string",
      "description": "Diisi dengan ID item pekerjaan jika penyesuaian spesifik untuk satu item opname tukang"
    }
  }
}
