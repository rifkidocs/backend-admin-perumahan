{
  "kind": "collectionType",
  "collectionName": "jadwal_kerjas",
  "info": {
    "singularName": "jadwal-kerja",
    "pluralName": "jadwal-kerjas",
    "displayName": "Jadwal Kerja",
    "description": "Jadwal kerja harian untuk pekerja konstruksi"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tanggal": {
      "type": "date",
      "required": true
    },
    "shift": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shift.shift",
      "inversedBy": "jadwal_kerjas"
    },
    "proyek": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "jadwal_kerjas"
    },
    "lokasi_kerja": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "pekerjas": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::pekerja.pekerja",
      "inversedBy": "jadwal_kerjas"
    },
    "target_pekerjaan": {
      "type": "text",
      "maxLength": 500
    },
    "status_jadwal": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "scheduled",
        "in_progress",
        "completed",
        "cancelled"
      ],
      "default": "scheduled"
    },
    "jumlah_pekerja": {
      "type": "integer",
      "min": 0,
      "required": true
    },
    "kehadiran": {
      "type": "json"
    },
    "catatan": {
      "type": "text",
      "maxLength": 500
    }
  }
}
