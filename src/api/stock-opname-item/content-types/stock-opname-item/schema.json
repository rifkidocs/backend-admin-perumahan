{
  "kind": "collectionType",
  "collectionName": "stock_opname_items",
  "info": {
    "singularName": "stock-opname-item",
    "pluralName": "stock-opname-items",
    "displayName": "Stock Opname Item",
    "description": "Detail item pemeriksaan stock"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "material_name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "system_stock": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "physical_stock": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "difference": {
      "type": "decimal"
    },
    "unit": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "notes": {
      "type": "text"
    },
    "stock_opname": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::stock-opname.stock-opname",
      "inversedBy": "stock_opname_items"
    },
    "material": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::material.material"
    },
    "variance_status": {
      "type": "enumeration",
      "enum": [
        "Match",
        "Over",
        "Short"
      ],
      "required": true
    },
    "adjustment_needed": {
      "type": "boolean",
      "default": false
    },
    "adjustment_reason": {
      "type": "enumeration",
      "enum": [
        "Rusak/Tidak Layak Pakai",
        "Hilang/Pencurian",
        "Kesalahan Input Sistem",
        "Expired Date",
        "Transfer Antar Lokasi",
        "Retur Supplier",
        "Sample/Display",
        "Lainnya"
      ]
    }
  }
}
