{
  "kind": "collectionType",
  "collectionName": "project_phases",
  "info": {
    "singularName": "project-phase",
    "pluralName": "project-phases",
    "displayName": "Project Phase",
    "description": "Manage project phases and milestones"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "phase_name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "phase_order": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "start_date": {
      "type": "date",
      "required": true
    },
    "target_end_date": {
      "type": "date",
      "required": true
    },
    "actual_end_date": {
      "type": "date"
    },
    "phase_status": {
      "type": "enumeration",
      "enum": ["planning", "ongoing", "completed", "delayed"],
      "required": true,
      "default": "planning"
    },
    "progress_percentage": {
      "type": "decimal",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "budget_allocation": {
      "type": "decimal",
      "min": 0
    },
    "actual_cost": {
      "type": "decimal",
      "min": 0
    },
    "description": {
      "type": "text",
      "maxLength": 1000
    },
    "milestones": {
      "type": "json"
    },
    "proyek_perumahan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan"
    },
    "tasks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::jadwal-proyek.jadwal-proyek",
      "mappedBy": "phase_relation"
    }
  }
}
