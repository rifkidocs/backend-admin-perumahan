{
  "kind": "collectionType",
  "collectionName": "project_workers",
  "info": {
    "singularName": "project-worker",
    "pluralName": "project-workers",
    "displayName": "Project Worker",
    "description": "Manage project workers and labor assignment"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "worker_name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "position": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 50
    },
    "worker_type": {
      "type": "enumeration",
      "enum": ["karyawan", "outsourced", "harian"],
      "required": true
    },
    "employee_id": {
      "type": "string",
      "maxLength": 20
    },
    "start_date": {
      "type": "date",
      "required": true
    },
    "end_date": {
      "type": "date"
    },
    "hourly_rate": {
      "type": "decimal",
      "min": 0
    },
    "daily_rate": {
      "type": "decimal",
      "min": 0
    },
    "monthly_rate": {
      "type": "decimal",
      "min": 0
    },
    "total_hours_worked": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "phone": {
      "type": "string",
      "pattern": "^08[0-9]{8,11}$"
    },
    "id_number": {
      "type": "string",
      "maxLength": 20
    },
    "skills": {
      "type": "json"
    },
    "team_leader": {
      "type": "string"
    },
    "notes": {
      "type": "text",
      "maxLength": 300
    },
    "status": {
      "type": "enumeration",
      "enum": ["aktif", "nonaktif", "cuti", "terminated"],
      "default": "aktif"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "workers"
    },
    "karyawan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "project_assignments"
    }
  }
}
