{
  "kind": "collectionType",
  "collectionName": "pengeluaran_materials",
  "info": {
    "singularName": "pengeluaran-material",
    "pluralName": "pengeluaran-materials",
    "displayName": "Pengeluaran Material",
    "description": "Sistem Pengeluaran Material (Issuance) dari gudang ke proyek"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "mrNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "time": {
      "type": "time",
      "required": true
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "required": true
    },
    "unit": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "material": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::material.material",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unitMeasure": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "requester": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "approver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "warehouseSupervisor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "approvalStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ],
      "default": "pending"
    },
    "status_issuance": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Sedang Diproses",
        "Selesai"
      ],
      "default": "Pending"
    },
    "notes": {
      "type": "text"
    },
    "documents": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "unit_rumah": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-rumah.unit-rumah",
      "inversedBy": "pengeluaran_materials"
    }
  }
}
