{
  "kind": "collectionType",
  "collectionName": "absensis",
  "info": {
    "singularName": "absensi",
    "pluralName": "absensis",
    "displayName": "Absensi",
    "description": "Record absensi karyawan dengan verifikasi lokasi"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tanggal": {
      "type": "date",
      "required": true
    },
    "jam_masuk": {
      "type": "datetime",
      "required": true
    },
    "jam_keluar": {
      "type": "datetime"
    },
    "status_absensi": {
      "type": "enumeration",
      "enum": [
        "hadir",
        "terlambat",
        "absen",
        "izin",
        "sakit",
        "lembur"
      ],
      "default": "hadir",
      "required": true
    },
    "lokasi_absensi": {
      "type": "json",
      "required": true,
      "schema": {
        "check_in_location": {
          "lat": "number",
          "lng": "number",
          "address": "string",
          "accuracy": "number"
        },
        "check_out_location": {
          "lat": "number",
          "lng": "number",
          "address": "string",
          "accuracy": "number"
        }
      }
    },
    "foto_absensi": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "foto_keluar_absensi": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "karyawan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "absensi"
    },
    "is_within_radius": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "distance_from_target": {
      "type": "decimal",
      "min": 0,
      "required": true
    },
    "overtime_hours": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "approval_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ],
      "default": "pending"
    },
    "rejection_reason": {
      "type": "text",
      "maxLength": 200
    },
    "keterangan": {
      "type": "text",
      "maxLength": 500
    },
    "attendance_schedule": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::attendance-schedule.attendance-schedule",
      "inversedBy": "attendance_records"
    },
    "laporan_patroli": {
      "type": "component",
      "repeatable": true,
      "component": "attendance.patrol-report"
    },
    "shift": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shift.shift"
    },
    "keterangan_tugas": {
      "type": "string",
      "maxLength": 100
    }
  }
}
