{
  "kind": "collectionType",
  "collectionName": "absensis",
  "info": {
    "singularName": "absensi",
    "pluralName": "absensis",
    "displayName": "Absensi",
    "description": "Record absensi karyawan dengan verifikasi lokasi"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "tanggal": {
      "type": "date",
      "required": true
    },
    "jam_masuk": {
      "type": "datetime",
      "required": true
    },
    "jam_keluar": {
      "type": "datetime"
    },
    "status_absensi": {
      "type": "enumeration",
      "enum": ["hadir", "terlambat", "absen", "izin", "sakit", "lembur"],
      "required": true,
      "default": "hadir"
    },
    "overtime_hours": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "keterangan": {
      "type": "text",
      "maxLength": 500
    },
    "foto_absensi": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "lokasi_absensi": {
      "type": "json",
      "required": true,
      "schema": {
        "check_in_location": {
          "lat": "number",
          "lng": "number",
          "address": "string",
          "accuracy": "number"
        },
        "check_out_location": {
          "lat": "number",
          "lng": "number",
          "address": "string",
          "accuracy": "number"
        }
      }
    },
    "is_within_radius": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "distance_from_target": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "attendance_schedule": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::attendance-schedule.attendance-schedule",
      "inversedBy": "attendance_records"
    },
    "approval_status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending"
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "rejection_reason": {
      "type": "text",
      "maxLength": 200
    },
    "karyawan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan",
      "inversedBy": "absensi"
    }
  }
}
