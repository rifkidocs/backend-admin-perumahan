{
  "kind": "collectionType",
  "collectionName": "promos",
  "info": {
    "singularName": "promo",
    "pluralName": "promos",
    "displayName": "Promotion",
    "description": "Promotion management system for housing projects"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3,
      "maxLength": 20
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": ["Diskon Langsung", "Cashback", "Free Item"]
    },
    "value": {
      "type": "biginteger",
      "required": true,
      "min": 0
    },
    "value_type": {
      "type": "enumeration",
      "required": true,
      "enum": ["Fixed", "Percentage", "Item Value"]
    },
    "start_date": {
      "type": "date",
      "required": true
    },
    "end_date": {
      "type": "date",
      "required": true
    },
    "unit_types": {
      "type": "json",
      "required": true
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan",
      "inversedBy": "promotions"
    },
    "min_purchase": {
      "type": "biginteger",
      "min": 0
    },
    "max_discount": {
      "type": "biginteger",
      "min": 0
    },
    "usage_limit": {
      "type": "integer",
      "min": 0
    },
    "used_count": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "description": {
      "type": "text",
      "maxLength": 1000
    },
    "terms_conditions": {
      "type": "richtext"
    },
    "status_promotion": {
      "type": "enumeration",
      "required": true,
      "enum": ["Aktif", "Tidak Aktif", "Expired"],
      "default": "Aktif"
    }
  }
}
