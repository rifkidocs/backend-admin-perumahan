{
  "kind": "collectionType",
  "collectionName": "distribusi_materials",
  "info": {
    "singularName": "distribusi-material",
    "pluralName": "distribusi-materials",
    "displayName": "Distribusi Material",
    "description": "Tracking perpindahan material antar gudang"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "nomor_distribusi": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "gudang_tujuan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::gudang.gudang",
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "distribusi.item-distribusi"
    },
    "tanggal_pengiriman": {
      "type": "date"
    },
    "tanggal_diterima": {
      "type": "date"
    },
    "status_distribusi": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Dikirim",
        "Diterima",
        "Ditolak"
      ],
      "default": "Pending",
      "required": true
    },
    "pengirim": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "penerima": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "keterangan": {
      "type": "text"
    },
    "bukti_foto": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
