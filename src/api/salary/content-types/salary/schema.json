{
  "kind": "collectionType",
  "collectionName": "salaries",
  "info": {
    "singularName": "salary",
    "pluralName": "salaries",
    "displayName": "Salary",
    "description": "Data gaji karyawan"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "basic_salary": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "position_allowance": {
      "type": "decimal",
      "min": 0
    },
    "tunjangan_kinerja": {
      "type": "decimal",
      "min": 0
    },
    "harian": {
      "type": "decimal",
      "min": 0
    },
    "tunjangan_bpjs_kesehatan": {
      "type": "decimal",
      "min": 0
    },
    "tunjangan_bpjs_ketenagakerjaan": {
      "type": "decimal",
      "min": 0
    },
    "deductions": {
      "type": "decimal",
      "min": 0
    },
    "net_salary": {
      "type": "decimal"
    },
    "effective_date": {
      "type": "date",
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "required": true,
      "enum": ["transfer", "cash", "check"]
    },
    "karyawan": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::karyawan.karyawan",
      "mappedBy": "salary"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "salary_id",
      "description": "Transaksi kas keluar yang dihasilkan dari data gaji ini"
    }
  }
}
