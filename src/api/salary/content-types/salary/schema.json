{
  "kind": "collectionType",
  "collectionName": "salaries",
  "info": {
    "singularName": "salary",
    "pluralName": "salaries",
    "displayName": "Salary",
    "description": "Data gaji karyawan"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "basic_salary": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "position_allowance": {
      "type": "decimal",
      "min": 0
    },
    "transport_allowance": {
      "type": "decimal",
      "min": 0
    },
    "meal_allowance": {
      "type": "decimal",
      "min": 0
    },
    "overtime_rate": {
      "type": "decimal",
      "min": 0
    },
    "bonus": {
      "type": "decimal",
      "min": 0
    },
    "deductions": {
      "type": "decimal",
      "min": 0
    },
    "net_salary": {
      "type": "decimal"
    },
    "effective_date": {
      "type": "date",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "IDR"
    },
    "payment_method": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "transfer",
        "cash",
        "check"
      ]
    },
    "karyawan": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::karyawan.karyawan",
      "mappedBy": "salary"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "salary_id",
      "description": "Transaksi kas keluar yang dihasilkan dari data gaji ini"
    }
  }
}
