{
  "kind": "collectionType",
  "collectionName": "pos_keuangans",
  "info": {
    "singularName": "pos-keuangan",
    "pluralName": "pos-keuangans",
    "displayName": "Pos Keuangan",
    "description": "Manajemen pos keuangan (Kas, Bank, Cek/Giro)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nama_pos": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "description": "Nama pos keuangan (misal: BRI, Kas Tunai, Cek Mandiri)"
    },
    "nomor_rekening": {
      "type": "string",
      "required": false,
      "unique": true,
      "maxLength": 50,
      "description": "Nomor rekening atau nomor referensi"
    },
    "nama_pemilik": {
      "type": "string",
      "required": false,
      "maxLength": 200,
      "description": "Nama pemilik rekening (jika ada)"
    },
    "saldo": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "description": "Saldo berjalan saat ini"
    },
    "jenis_rekening": {
      "type": "enumeration",
      "enum": [
        "tunai",
        "tabungan",
        "giro",
        "cek",
        "deposito",
        "elektronik"
      ],
      "default": "tabungan",
      "description": "Jenis pos keuangan"
    },
    "mata_uang": {
      "type": "enumeration",
      "enum": ["IDR", "USD", "EUR"],
      "default": "IDR",
      "description": "Mata uang rekening"
    },
    "saldo_minimum": {
      "type": "decimal",
      "description": "Saldo minimum yang harus dipertahankan"
    },
    "status_aktif": {
      "type": "boolean",
      "default": true,
      "description": "Status aktif rekening"
    },
    "deskripsi": {
      "type": "text",
      "maxLength": 500,
      "description": "Deskripsi atau catatan tambahan"
    },
    "kas_keluars": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-keluar.kas-keluar",
      "mappedBy": "pos_keuangan"
    },
    "kas_masuks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::kas-masuk.kas-masuk",
      "mappedBy": "pos_keuangan"
    }
  }
}