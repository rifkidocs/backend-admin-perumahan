{
  "kind": "collectionType",
  "collectionName": "purchase_orders",
  "info": {
    "singularName": "purchase-order",
    "pluralName": "purchase-orders",
    "displayName": "Purchase Order",
    "description": "Purchase orders for materials and services with workflow management"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "kode": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 20
    },
    "nomor_po": {
      "type": "string",
      "unique": true
    },
    "tanggal": {
      "type": "date",
      "required": true
    },
    "tanggal_estimasi_delivery": {
      "type": "date"
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "purchase_orders"
    },
    "items": {
      "type": "component",
      "component": "shared.material-item",
      "repeatable": true,
      "required": true
    },
    "total_amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status_po": {
      "type": "enumeration",
      "enum": [
        "draft",
        "dikirim",
        "diterima_sebagian",
        "diterima",
        "dibatalkan"
      ],
      "default": "draft",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "sent",
        "approved",
        "rejected",
        "completed",
        "cancelled",
        "delivered"
      ],
      "default": "draft"
    },
    "status_payment": {
      "type": "enumeration",
      "enum": [
        "pending",
        "partial",
        "paid",
        "overdue",
        "cancelled"
      ],
      "default": "pending"
    },
    "status_delivery": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "partial_delivered",
        "delivered",
        "returned"
      ],
      "default": "pending"
    },
    "status_price": {
      "type": "enumeration",
      "enum": [
        "standard",
        "negotiated",
        "promo",
        "special",
        "emergency"
      ],
      "default": "standard"
    },
    "status_quality": {
      "type": "enumeration",
      "enum": [
        "pending",
        "passed",
        "failed",
        "conditional",
        "rework"
      ],
      "default": "pending"
    },
    "tanggal_estimasi_delivery": {
      "type": "date"
    },
    "payment_terms": {
      "type": "string",
      "maxLength": 200
    },
    "notes": {
      "type": "text",
      "maxLength": 1000
    },
    "purchase_request": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::purchase-request.purchase-request"
    },
    "evaluations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::supplier-evaluation.supplier-evaluation",
      "mappedBy": "purchase_order_reference"
    },
    "penerimaan_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::penerimaan-material.penerimaan-material",
      "mappedBy": "purchaseOrder"
    },
    "payment_invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment-invoice.payment-invoice",
      "mappedBy": "purchaseOrder"
    }
  }
}
