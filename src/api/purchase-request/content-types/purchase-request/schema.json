{
  "kind": "collectionType",
  "collectionName": "purchase_requests",
  "info": {
    "singularName": "purchase-request",
    "pluralName": "purchase-requests",
    "displayName": "Purchase Request",
    "description": "Purchase Request system for external supplier procurement"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "pr_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "request_date": {
      "type": "date",
      "required": true
    },
    "needed_date": {
      "type": "date",
      "required": true
    },
    "items": {
      "type": "component",
      "component": "shared.material-item",
      "repeatable": true,
      "required": true
    },
    "total_amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "estimated_price": {
      "type": "decimal"
    },
    "requester": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "proyek": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::proyek-perumahan.proyek-perumahan"
    },
    "request_type": {
      "type": "enumeration",
      "required": true,
      "default": "Proyek",
      "enum": [
        "Proyek",
        "Gudang"
      ]
    },
    "status_purchase": {
      "type": "enumeration",
      "required": true,
      "default": "submitted",
      "enum": [
        "submitted",
        "approved",
        "processed",
        "completed",
        "rejected"
      ]
    },
    "priority": {
      "type": "enumeration",
      "default": "normal",
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ]
    },
    "notes": {
      "type": "text",
      "maxLength": 500
    },
    "supplier_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier"
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::karyawan.karyawan"
    },
    "approved_date": {
      "type": "date"
    },
    "po_reference": {
      "type": "string",
      "maxLength": 50
    },
    "purchase_orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase-order.purchase-order",
      "mappedBy": "purchase_request"
    }
  }
}
